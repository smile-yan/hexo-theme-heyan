.post-nav
  overflow: hidden;
  margin-top: 15px;
  margin-bottom: 20px;
  padding: 10px;
  white-space: nowrap;
  border-top: 1px solid #eee;

.search-result-title
  text-decoration: none;
  font-size: 20px;
  font-weight: 600;

// 搜索关键字
.search-keyword
  color: red;

.border-auto
